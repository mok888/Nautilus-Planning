```yaml
exchange_identity:
  exchange_name: Lighter
  venue_id: UNKNOWN
  exchange_type: DEX
market_coverage:
  spot_supported: true
  perps_supported: true
  futures_supported: false
  options_supported: false
rest_api:
  rest_base_url: https://api.lighter.xyz
  api_version: v1
  rate_limits:
    - UNKNOWN
authentication:
  auth_type: API_KEY
  headers:
    - X-API-KEY
    - X-TIMESTAMP
    - X-SIGNATURE
  timestamp_format: milliseconds
  signature_payload: timestamp + method + path + body
  hash_algo: keccak256
  encoding: hex
  passphrase_required: false
rest_endpoints:
  - name: Get Markets
    path: /v1/markets
    method: GET
    auth_required: false
    request_fields:
      - UNKNOWN
    response_fields:
      - name
      - baseAsset
      - quoteAsset
      - minOrderSize
      - tickSize
      - stepSize
  - name: Place Order
    path: /v1/order
    method: POST
    auth_required: true
    request_fields:
      - market
      - side
      - baseAmount
      - price
      - limitFee
    response_fields:
      - orderId
  - name: Cancel Order
    path: /v1/order
    method: DELETE
    auth_required: true
    request_fields:
      - orderId
      - market
    response_fields:
      - orderId
  - name: Get Order
    path: /v1/order
    method: GET
    auth_required: true
    request_fields:
      - orderId
      - market
    response_fields:
      - orderId
      - market
      - side
      - baseAmount
      - price
      - filledAmount
      - status
websocket_public:
  ws_public_url: wss://api.lighter.xyz/ws
  channels:
    - orderbook
    - trades
  heartbeat_interval_sec: UNKNOWN
websocket_private:
  ws_private_url: wss://api.lighter.xyz/ws
  auth_required: true
  order_updates: true
  fills: true
  balance_updates: true
order_model:
  order_types:
    - LIMIT
  order_states:
    - OPEN
    - FILLED
    - CANCELLED
    - REJECTED
  partial_fill_behavior: STAYS_OPEN
  cancel_behavior: REMOVE_REMAINING
instrument_metadata:
  instrument_id_format: BASE-QUOTE
  price_precision: UNKNOWN
  quantity_precision: UNKNOWN
  contract_size: 1
special_notes:
  - Exchange is built on zkSync Era
  - Uses EVM compatible signatures (keccak256)
```